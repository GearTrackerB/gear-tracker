<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_toolbar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_login_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_credit_card_24"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_login_box"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/bg_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_login_box"
        app:layout_constraintStart_toStartOf="@id/iv_login_box"
        app:layout_constraintEnd_toStartOf="@id/et_id"
        app:layout_constraintBottom_toTopOf="@id/tv_pw"/>
    <EditText
        android:id="@+id/et_id"
        android:layout_width="150dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_id"
        app:layout_constraintStart_toEndOf="@id/tv_id"
        app:layout_constraintEnd_toEndOf="@id/iv_login_box"/>

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        app:layout_constraintBottom_toTopOf="@id/btn_test"
        app:layout_constraintStart_toStartOf="@id/tv_id"/>

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="150dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pw"
        app:layout_constraintStart_toStartOf="@id/et_id" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_login_box"
        app:layout_constraintEnd_toEndOf="@id/iv_login_box"
        app:layout_constraintTop_toBottomOf="@id/tv_pw"
        app:layout_constraintBottom_toBottomOf="@id/iv_login_box"
        android:text="로그인"
        android:textStyle="bold"
        android:backgroundTint="#D50000"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>