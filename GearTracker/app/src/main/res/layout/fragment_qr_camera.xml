<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- Top LinearLayout with Black Background -->
        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sv_scanner_view">

            <TextView
                android:id="@+id/tv_result"
                android:text="장비 Serial : 요청 결과"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="48dp"/>

        </LinearLayout>

        <!-- QR Code Scanner -->
        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/sv_scanner_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            app:layout_constraintBottom_toBottomOf="@id/circle_menu"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/circle_menu"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:text="출고 모드"
            android:textSize="16dp"
            android:background="@drawable/bg_rect_white_border"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/tv_equip_total_info"
            android:text="장비출고현황"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:padding="9dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="48dp"
            android:src="@drawable/ic_rent_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_scanner_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/tv_inventory_info"
            android:text="재물조사현황"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_inventory_info_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_scanner_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Circle Menu -->
        <com.ramotion.circlemenu.CircleMenuView
            android:id="@+id/circle_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_scanner_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="248dp"
            android:layout_height="248dp"
            app:button_colors="@array/colors"
            app:button_icons="@array/icons"
            tools:ignore="MissingClass" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
