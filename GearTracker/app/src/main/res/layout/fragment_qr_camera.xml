<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- Top LinearLayout with Black Background -->
        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sv_scanner_view">

            <TextView
                android:id="@+id/tv_equip_total_info"
                android:text="장비출납조회"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/tv_inventory_info"
                android:text="재물조사조회"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="24dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- QR Code Scanner -->
        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/sv_scanner_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            app:layout_constraintBottom_toBottomOf="@id/circle_menu"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"/>

        <!-- Circle Menu -->
        <com.ramotion.circlemenu.CircleMenuView
            android:id="@+id/circle_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_scanner_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:button_colors="@array/colors"
            app:button_icons="@array/icons"
            tools:ignore="MissingClass" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
